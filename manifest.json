{
  "manifest_version": 2,
  "name": "URL and Title Extractor",
  "version": "1.0",
  "description": "Extracts the URL and title of the current page.",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Get URL and Title",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/images/icons8-color-16.png",
    "32": "/images/icons8-color-32.png",
    "48": "/images/icons8-color-48.png",
    "128": "/images/icons8-color-128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
